<!--
  View: CareTrackerConfig
  Used by: GET / via careTrackerConfigController.showConfigPage.
  Expects template locals: csrfToken, form, title, user.
  Primary data variables used in this template: c, csrfToken, title, type.
-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Uses the dynamic page title set by the controller. -->
  <title><%= title %> - CS346 Project</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="care-config-page">
  <header>
    <nav>
      <div class="container">
        <a href="/" class="logo">Titan Care Tracker</a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
<!-- Conditional block: Show user-specific section only when a user is logged in. (condition: `user`). -->
          <% if (user) { %>
            <li><a href="/users/profile">Profile</a></li>
            <li>
              <form action="/users/logout" method="POST" style="display: inline;">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn-link">Logout</button>
              </form>
            </li>
          <% } else { %>
            <li><a href="/users/login">Login</a></li>
            <li><a href="/users/register">Register</a></li>
          <% } %>
        </ul>
      </div>
    </nav>
  </header>

 <main class="container form-container">

  <!-- LEFT: Code Table -->
  <div class="left-table ">
    <label for="filterType"><strong>Filter by Code Type:</strong></label>
    <select id="filterType">
      <option value="All">All</option>
      <%
        const uniqueTypes = [...new Set(codes.map(c => c.CodeType))];
        uniqueTypes.forEach(type => {
      %>
        <option value="<%= type %>"><%= type %></option>
      <% }) %>
    </select>


    <section class="features">
      <h1>Code Table Reference</h1>
      <table id="codeTable" class="table_shared  care-config-table">
        <colgroup>
          <col class="col-type">
          <col class="col-group">
          <col class="col-code">
          <!-- <col class="col-meaning"> -->
          <col class="col-actions">
        </colgroup>
        <thead>
          <tr>
            <th>Code Type</th>
            <th>Code Group</th>
            <th>Code</th>
            <!-- <th>Meaning</th> -->
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% codes.forEach(c => { %>
            <tr>
              <td><%= c.CodeType %></td>
              <td class="cell-wrap"><%= c.CodeGroup %></td>
              <td class="cell-wrap"><%= c.Code %></td>
              <!-- <td><%= c.CodeMeaning %></td> -->
              <td>
                <% if (user && user.roleLevel === 2) { %>
                  <form
                    method="POST"
                    action="/caretrackerconfig/delete"
                    style="display:inline;"
                    onsubmit="return confirm('Delete this code?');"
                  >
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="codeId" value="<%= c.CodeId %>">
                    <button type="submit" class="btn-link danger">Delete</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
  <!-- RIGHT: Floating Form -->
  <aside class="code-form-panel">
    <h2 class="code-form-title">Add New Code</h2>
    <form id="newCodeForm" method="POST" action="/caretrackerconfig/add_config" class="code-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label for="codeType"><strong>Code Type</strong></label><br>
        <select id="codeType" name="codeType" required class="form-control">
          <option value="">Select Type</option>
          <% uniqueTypes.forEach(type => { %>
            <option value="<%= type %>"><%= type %></option>
          <% }) %>
        </select>
      </div>

      <div  id="codeGroupWrap" class="field <%= (form && form.code_type === 'domain') ? '' : 'hidden' %>" aria-hidden="<%= (form && form.code_type === 'domain') ? 'false' : 'true' %>">
        <label for="codeGroup"><strong>Code Group</strong></label><br>
        <input type="text" id="codeGroup" name="codeGroup" required placeholder="e.g. Gender / Diagnosis" class="form-control">
      </div>

      <div class="form-group">
        <label for="code"><strong>Code</strong></label><br>
        <input type="text" id="code" name="code" required placeholder="e.g. D006" class="form-control">
      </div>

      <!-- <div class="form-group">
        <label for="codeMeaning"><strong>Code Meaning</strong></label><br>
        <textarea id="codeMeaning" name="codeMeaning" rows="3" placeholder="Description..." class="form-control"></textarea>
      </div> -->

      <button type="submit" class="btn-primary">Add Code</button>
    </form>
  </aside>

</main>

  <footer>
    <div class="container">
      <p>&copy; 2024 CS346 Project. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
  <script src="/js/codeTable.js"></script>


</body>
</html>
